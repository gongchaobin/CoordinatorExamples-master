<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="saulmm.coordinatorexamples"
	>

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		>

		<activity
			android:name=".MainActivity"
			android:label="@string/app_name"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name=".FlexibleSpaceExampleActivity"/>

		<activity
			android:name=".SimpleCoordinatorActivity"
			android:theme="@style/AppTheme.SimpleCoordinatorTheme"
			/>

		<activity android:name=".MaterialUpConceptActivity"/>

		<activity android:name=".IOActivityExample"/>

		<activity android:name=".SwipeBehaviorExampleActivity"/>
		
		<activity android:name=".TestActivity"/>

		<activity android:name=".DemoActivity"/>
		
		<provider
			android:authorities="saulmm.coordinatorexamples.db.myprovider"
			android:name=".db.MyProvider"/>

		<service android:name=".job.JobSchedulerService"
				 android:permission="android.permission.BIND_JOB_SERVICE"/>

		<activity android:name=".RxJavaTestActivity"/>

    </application>

</manifest>
